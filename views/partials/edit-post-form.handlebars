<div class="container content box">
  <h2>New Post</h2>
  <form data-userId="{{user_id}}" data-post-id='{{post.id}}' id="edit-post-form">
    <div class="field">
      <label class="label">Post Title</label>
      <div class="control">
        <input id="title-input" class="input is-info" type="text" value="{{post.title}}" />
      </div>
    </div>

    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea id="content-input" class="textarea" rows="10" type="text">{{post.content}}</textarea>
      </div>
    </div>

    <div class="field">
      <label class="label">Image</label>
      <div class="control">
        <input id="file-input" class="textarea" rows="10" type="file" multiple>
      </div>
    </div>

    <button id="edit-post-btn" class="button is-primary">Submit</button>
</div>

</form>
</div>

<script src="/js/edit-post.js"></script>