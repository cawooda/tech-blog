{{!-- {{log this}} --}}
<div class="container content box">
    <h2>Sign Up</h2>
    <form id="auth-form" data-registration="true">
        <div class="field">
            <label class="label">First Name</label>
            <div class="control">
                <input id="first-name-input" class="input" type="text" placeholder="First Name" {{#if testData}}
                    value="{{testData.first_name}}" {{/if}} />
            </div>
        </div>

        <div class="field">
            <label class="label">Last Name</label>
            <div class="control">
                <input id="last-name-input" class="input" type="text" placeholder="Last Name" {{#if testData}}
                    value="{{testData.last_name}}" {{/if}} />
            </div>
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control has-icons-left has-icons-right">
                <input id="email-input" class="input is-info" type="email" {{#if testData}} value="{{testData.email}}"
                    {{/if}} />
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                    <i class="fas fa-exclamation-triangle"></i>
                </span>
            </div>
        </div>

        <div class="field">
            <label class="label">Password</label>
            <div class="control has-icons-left has-icons-right">
                <input id="password-input" class="input password is-info" type="password" {{#if testData}}
                    value="{{testData.password}}" {{/if}} />
                <span class="icon is-small is-left">
                    <i class="fas fa-key"></i>
                </span>
                <span class="icon is-small is-right">
                    <i class="fas fa-exclamation-triangle"></i>
                </span>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <label class="checkbox">
                    <input id="agrees-terms" type="checkbox" />
                    I agree to the
                    <a href="{{termsAddress}}">terms and conditions</a>
                </label>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link">Sign Up</button>
            </div>
            <div class="control">
                <button class="button is-link is-light">Cancel</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/login-reg.js"></script>